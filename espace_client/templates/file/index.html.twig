{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/layout_pages.css') }}">
{% endblock %}
{% block title %}File index{% endblock %}

{% block body %}
    {% if app.user.roles[0] is same as('ROLE_ADMIN') %}
        <div class="page_header">
            <h1>Zone d'archivage de l'entreprise {{ user.enterprise }} </h1>
            <div>
                <a href="{{ path("app_admin_index") }}">Accueil</a>
                <span>/</span>
                <a
                        href="{{ path('app_admin_category_index', {'user_login': user.login}) }}"> Dossier
                    de {{ user.enterprise }}</a>
                <span>/</span>
                <a
                        href="{{ path('app_admin_file_index', {'user_login': user.login, 'category_label': category.label}) }}">{{ category.label }}
                </a>
            </div>
        </div>
    {% endif %}
    {% if app.user.roles[0] is same as('ROLE_USER') %}
        <div class="page_header">
            <h1>Zone d'archivage de l'entreprise {{ user.enterprise }} </h1>
            <div>
                <a href="{{ path("app_user_category_index") }}">Accueil</a> /
                <a href="{{ path('app_admin_file_index', {'user_login': user.login, 'category_label': category.label}) }}">{{ category.label }}
                </a>
            </div>
        </div>
    {% endif %}

    <table class="table">
        <thead>
        <tr>
            <th>Nom du fichier</th>
            <th>Format</th>
            <th>Date d'ajout</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for file in files %}
            <tr onclick="location.href='{{ path('app_admin_category_index', {'user_login': user.login}) }}';">
                <td>{{ file.path }}</td>
                <td>{{ file.format }}</td>
                <td>{{ file.created_at ? file.created_at|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <div class="file_action">
                        <a href="{{ file.path }}" target="_blank"><i class="fa fa-download"></i></a>
                        {% if app.user.roles[0] is same as('ROLE_ADMIN') %}
                            {{ include('file/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de fichier.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
