{% extends 'base.html.twig' %}

{% block title %}Ajout d'un fichier{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/add_file.css') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block body %}
    {% for label,messages in app.flashes(['error']) %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}" id="flash">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <h1>Ajout d'un fichier</h1>

    {{ include('file/_form.html.twig') }}

    <a href="{{ path('app_admin_index') }}" class="no-print">
        <i class="fa-solid fa-arrow-left"></i><span>Retour</span>
    </a>
{% endblock %}
