{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/authentification/authentification.css') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container-auth">
        <h1>Réinitialiser votre mot de passe</h1>

        {{ form_start(resetForm, { 'attr': {'class': 'container-auth-inside-input'} }) }}
        {{ form_row(resetForm.plainPassword, { 'attr': {'class': 'container-auth-inside-input'} }) }}
        <button class="btn btn-primary">Réinitialiser le mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
