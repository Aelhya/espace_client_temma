{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <p>Afficher le fil d'ariane</p>

    {% if app.user.roles[0] is same as('ROLE_ADMIN') %}
        <div>
            {{ user.login }}
        </div>
    {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Label</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.label }}</td>
                <td>
                    {% if app.user.roles[0] is same as('ROLE_ADMIN') %}
                        <a href="{{ path('app_admin_file_index', {'user_login': user.login, 'category_label': category.label } ) }}">voir les fichiers</a>
                    {% endif %}
                    {% if app.user.roles[0] is same as('ROLE_USER') %}
                        <a href="{{ path('app_category_show', {'category_label': category.label } ) }}">voir les fichiers</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
