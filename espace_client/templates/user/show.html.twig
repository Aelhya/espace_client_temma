{% extends 'base.html.twig' %}

{% block title %}Détails du client {{ user.enterprise }}{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/user/show_user.css') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block body %}
    <h1>Détail du client</h1>

    <div class="table">
        <div>
            <p>
                <strong><i class="fa-solid fa-briefcase"></i>Entreprise :</strong>
                <span>{{ user.enterprise }}</span>
            </p>
            <p>
                <strong><i class="fa-solid fa-user"></i>Login :</strong>
                <span>{{ user.login }}</span>
            </p>
        </div>
        <div>
            <p>
                <strong><i class="fa-solid fa-building-user"></i>Contact de l'entreprise :</strong>
                <span>{{ user.civility }} {{ user.lastname }} {{ user.firstname }}</span>
            </p>
            <p>
                <strong><i class="fa-solid fa-envelope"></i> Email :</strong>
                <span>{{ user.email }}</span>
            </p>
        </div>
    </div>

    <div class="actions">
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="no-print">
            <i class="fa-solid fa-user-pen"></i><span>Editer</span>
        </a>

        {{ include('user/_delete_form.html.twig') }}
    </div>

    <a href="{{ path('app_user_category_index') }}" class="no-print">
        <i class="fa-solid fa-arrow-left"></i><span>Retour</span>
    </a>
{% endblock %}
