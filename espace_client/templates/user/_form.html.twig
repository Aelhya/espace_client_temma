{{ form_start(form) }}
<div class="container-user-inside-input margin-left-2-rem">
    <div class="flex-row space-between">
        <div class="flex-column ">
            {{ form_label(form.enterprise) }}
            {{ form_widget(form.enterprise) }}
        </div>
        <div class="flex-column">
            <div>
                {{ form_label(form.email) }}
                <abbr title="Lors de la création d'un utilisateur, un mail lui est envoyé avec ses identifiants.">
                    <i class="fa-solid fa-circle-info color-blue"></i>
                </abbr>
            </div>
            {{ form_widget(form.email) }}
        </div>
    </div>
    <div class="flex-row space-between">
        <div class="flex-column">
            {{ form_label(form.civility) }}
            {{ form_widget(form.civility) }}
        </div>
        <div class="flex-column">
            {{ form_label(form.firstname) }}
            {{ form_widget(form.firstname) }}
        </div>
        <div class="flex-column">
            {{ form_label(form.lastname) }}
            {{ form_widget(form.lastname) }}
        </div>
    </div>
    <div>
        {{ form_label(form.isAdmin) }}
        {{ form_widget(form.isAdmin) }}
    </div>


    <button class="btn">{{ button_label|default('Créer l\'utilisateur') }}</button>
</div>
{{ form_end(form) }}
